<%- include('../partials/header') %> 

<script src="/javascript/app.js"></script>

<section class="container user-login">
    <div class="d-flex">
        <h1 class="container" id="title"><%= title %> </h1>
        <a href="/feed/thoughts/new" class="btn btn-outline-primary" id="share-btn">Share A Thought</a>
    </div>
    <div>
        <% thought.reverse().forEach(t => { %>
        <div class="card">
                <div class="row g-0">
                    <div class="col-md-auto">
                        <img src="<%= t.userAvatar %>" class="img-fluid" alt="User Avatar" id="avatar">
                    </div>
                <div class="col-md-auto">
                    <div class="card-body">
                        <h5 class="card-title"><%= t.userName %></h5>
                        <p class="card-text"><%= t.content %></p>
                        <div><a href="/feed/thoughts/<%= t._id %>"><img src="/images/comment-icon.svg" alt="comment icon"></a></div>
                    </div>
                </div>
                <% if (user && user._id.equals(t.user)) { %>
                    <div class="col-4">
                        <a href="/feed/thoughts/<%= t._id %>/edit" class="edit"><img src="/images/edit-icon.svg" alt="edit icon"></a>
                    </div>
                    <% } %>
                </div>
            </div>
            <% }) %>
    </div>
</section><br>

<%- include('../partials/footer') %> 